<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/headerhome_root"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#0071BC" >

        <ImageButton
            android:id="@+id/backr"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:src="@drawable/esgul_launch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/backr"
            android:gravity="center_vertical|center_horizontal|left"
            android:text="INFORMASI WISATA"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical" >

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/judulwisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/nama_wisata_ket"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:padding="3dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagedetailwisata"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>
</ScrollView>
</LinearLayout>









