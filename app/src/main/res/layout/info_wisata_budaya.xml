<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/footer_info_wisata_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <include
        android:id="@+id/include2"
        layout="@layout/header_wisata_budaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/include3"
        layout="@layout/box_info_wisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <include
        android:id="@+id/btn_kewisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        layout="@layout/button_go_to_listwisata_layout" />

   <TextView
          android:id="@+id/textwisataalam"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/include3"
          android:layout_alignTop="@+id/include3"
          android:layout_marginLeft="2dp"
          android:layout_marginTop="33dp"
          android:gravity="center"
          android:text="@string/info_wisata_budaya" />

</RelativeLayout>